pipeline {
  agent any 
  environment {
    JAVA_HOME="/usr/local/jdk1.8.0_171"
    ANT_HOME="/usr/local/apache-ant-1.10.3"
  }

  stages {
    stage('Test') {
       steps {
	sh "${ANT_HOME}/bin/ant test"
       }
    }
    stage('Build') {
	steps {
          sh "${ANT_HOME}/bin/ant jar"
	}
    }
    stage('Archieve') {
	steps {
          sh 'cp dist/Addition.jar /var/www/html/'
	}
    }
  }

}
