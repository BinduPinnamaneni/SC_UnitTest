pipeline {
  agent any 
  environment {
    JAVA_HOME="/var/lib/jenkins/jdk"
    ANT_HOME="/var/lib/jenkins/apache-ant-1.10.3"
  }

  stages {
    stage('Test') {
       steps {
	sh "ant test"
       }
    }
    stage('Build') {
	steps {
          sh "ant jar"
	}
    }
    stage('Archieve') {
	steps {
          sh 'cp dist/Addition.jar /var/www/html/'
	}
    }
  }

}
